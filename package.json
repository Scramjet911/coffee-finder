{
  "name": "coffee-finder",
  "version": "1.0.0",
  "description": "A Coffee Shop Finder API server and web app built with React, Node.js, Express, and Mongoose.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --env-file=.env src/server.ts",
    "build": "tsc",
    "postbuild": "cp package*.json dist && (cd dist && npm ci --omit=dev)",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scramjet911/coffee-finder.git"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "typescript",
    "coffee-shop"
  ],
  "author": "Scramjet911",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Scramjet911/coffee-finder/issues"
  },
  "homepage": "https://github.com/Scramjet911/coffee-finder#readme"
}
